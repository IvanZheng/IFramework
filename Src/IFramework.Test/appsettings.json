{
  "AliyunLogOptions": {
    "Endpoint": "cn-shanghai.log.aliyuncs.com",
    "Project": "vorwerk-api-gateway-test",
    "LogStore": "eshop",
    "AccessKeyId": "",
    "AccessKey": "",
    "Topic": "test"
  },
  "ConnectionStrings": {
    "DemoDbContext": "Server=(localdb)\\projects;Database=IFramework.DemoDb;Integrated Security=true;",
    "DemoDbContext.MySql": "server=127.0.0.1;Port=3306;uid=root;pwd=Password01!;database=IFramework.DemoDb{0}",
    "DemoDbContext.MongoDb": "mongodb://localhost/DemoDb"
  },
  "RedisEventStoreOptions": {
    "ConnectionString": "localhost:6379",
    "DatabaseName": -1,
    "AppendEventsLuaScript": "",
    "GetEventsLuaScript": "",
    "HandleEventLuaScript": ""
  },
  "RedisSnapshotStoreOptions": {
    "ConnectionString": "localhost:6379",
    "DatabaseName": -1
  },
  "EventStoreOptions": {
    "ConnectionName": "IFramework.Test",
    "ConnectionString": "ConnectTo=tcp://admin:changeit@127.0.0.1:1113"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "System": "None",
      "Microsoft": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Logger",
              "Args": {
                "configureLogger": {
                  "Filter": [
                    {
                      "Name": "ByIncludingOnly",
                      "Args": {
                        "expression": "@l = 'Information' or @l = 'Debug'"
                      }
                    }
                  ],
                  "WriteTo": [
                    {
                      "Name": "File",
                      "Args": {
                        "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {SourceContext} [{Level:w3}] {Message} Scope: {Properties:j}{NewLine}{Exception}{NewLine}",
                        "path": "log/debug_.txt",
                        "rollingInterval": "Day"
                      }
                    }
                  ]
                }
              }
            }
          ]
        }
      },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} {SourceContext} [{Level:w3}] {Message} Scope: {Properties:j}{NewLine}{Exception}{NewLine}",
                "path": "log/error_.txt",
                "rollingInterval": "Day",
                "restrictedToMinimumLevel": "Warning"
              }
            }
          ]
        }
      }
    ]
  }
}
